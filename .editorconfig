root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 120

# Go uses tabs (gofmt)
[*.go]
indent_style = tab
indent_size = 4

# Makefiles require hard tabs
[Makefile]
indent_style = tab
indent_size = 4

# JS/TS/HTML/CSS
[*.{js,jsx,ts,tsx,css,scss,html}]
indent_style = space
indent_size = 4

# JSON / YAML
[*.{json,yml,yaml}]
indent_style = space
indent_size = 4

# Windows scripts
[*.{bat,cmd,ps1}]
end_of_line = crlf

# Markdown: keep intentional trailing spaces; don't hard-wrap
[*.md]
trim_trailing_whitespace = false
max_line_length = off
